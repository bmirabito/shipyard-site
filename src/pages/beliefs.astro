---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const beliefs = [
  { title: "God", text: "We believe in one God eternally existing as one essence and three distinct persons: God the Father, God the Son, and God the Holy Spirit, each of whom is fully God, yet there is one God." },
  { title: "Revelation", text: "God has made Himself known to the world in Jesus Christ, the Scriptures, and creation." },
  { title: "Creation & Providence", text: "We believe that God created the world from nothing and governs all things at all times in all places." },
  { title: "Humanity", text: "We believe that all humanity is created in the image of God and possesses intrinsic dignity and worth." },
  { title: "Sin", text: "We believe that sin has fractured all things, including our relationships with God, other people, and creation, leaving the world in desperate need of salvation." },
  { title: "Salvation", text: "We believe that salvation is by grace alone through faith alone in Jesus Christ alone." },
  { title: "The Church", text: "We believe that the Church is the body of Christ sent into the world to shine forth the love, beauty, and glory of God." },
  { title: "Bible", text: "We believe the Holy Scriptures, both Old and New Testaments, are the inspired Word of God and final authority on all matters of faith and life." },
  { title: "Resurrection & the Kingdom", text: "We believe that Jesus Christ is returning to the world in the future to judge the living and the dead." },
  { title: "Eternity", text: "We believe those who receive and trust in Jesus Christ as Lord and Savior will enjoy eternal life with God, whereas those who reject Him will remain separated from His presence." },
];
---

<Layout title="What We Believe Â· Shipyard Church" description="Our statement of faith. We affirm the historic Christian creeds and believe Scripture is our final authority on all matters of faith and life.">
  <Header activePage="about" />

  <nav class="breadcrumb" aria-label="Breadcrumb">
    <div class="breadcrumb-inner">
      <a href="/about">About</a>
      <span class="breadcrumb-sep">&rsaquo;</span>
      <span class="breadcrumb-current">What We Believe</span>
    </div>
  </nav>

  <div class="page-header no-border">
    <div class="page-header-inner">
      <h1 class="page-title">What We Believe</h1>
      <p class="page-subtitle">Our statement of faith</p>
    </div>
  </div>

  <main class="content">
    <section class="beliefs-section">
      {beliefs.map((belief, index) => (
        <article class="belief-item">
          <span class="belief-number">{index + 1}</span>
          <div class="belief-content">
            <h2 class="belief-title">{belief.title}</h2>
            <p class="belief-text">{belief.text}</p>
          </div>
        </article>
      ))}
    </section>

    <aside class="creeds">
      <h2 class="creeds-title">Historic Creeds</h2>
      <p class="creeds-text">In alignment with the historic Christian church, we believe and affirm the <a href="/creeds">Apostles' and Nicene creeds</a> as solid representations of the Bible's teaching.</p>
    </aside>
  </main>

  <Footer />
</Layout>

<style>
  .page-header.no-border {
    border-bottom: none;
  }

  .content {
    max-width: 760px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .beliefs-section {
    background: var(--white);
    border-radius: 16px;
    padding: 3rem;
    margin-bottom: 2rem;
    box-shadow: 0 1px 3px rgba(61, 54, 48, 0.04);
  }

  .belief-item {
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--cream-dark);
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.25rem;
    align-items: start;
  }

  .belief-item:first-child {
    padding-top: 0;
  }

  .belief-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .belief-number {
    width: 32px;
    height: 32px;
    background: var(--cream);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--rust);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .belief-content {
    min-width: 0;
  }

  .belief-title {
    font-family: 'Lora', Georgia, serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--warm-black);
    margin-bottom: 0.5rem;
  }

  .belief-text {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.75;
  }

  .creeds {
    background: var(--white);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 1px 3px rgba(61, 54, 48, 0.04);
    border-left: 4px solid var(--olive);
    position: relative;
  }

  .creeds-title {
    font-family: 'Lora', Georgia, serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--warm-black);
    margin-bottom: 0.75rem;
  }

  .creeds-text {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.75;
  }

  .creeds-text a {
    color: var(--navy);
    font-weight: 500;
  }

  @media (max-width: 900px) {
    .content {
      padding: 2.5rem 1.5rem;
    }

    .beliefs-section {
      padding: 2rem 1.5rem;
    }

    .belief-item {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .belief-number {
      width: 28px;
      height: 28px;
      font-size: 0.75rem;
    }

    .creeds {
      padding: 2rem 1.5rem;
    }
  }
</style>
