---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A gathering of disciples devoted to encouraging one another through shared community, scripture, prayer, and breaking bread. Sundays at 10 AM." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Source+Sans+3:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --warm-black: #3d3630;
    --warm-black-light: #4a433c;
    --olive: #5c6b4a;
    --olive-dark: #4a5a3a;
    --navy: #2d3a4a;
    --rust: #8b5a3c;
    --rust-light: #a06a48;
    --sand: #d4a574;
    --sand-light: #e0b888;
    --cream: #f5f0e8;
    --cream-dark: #ebe5db;
    --white: #ffffff;
    --border: #e8e4dc;
    --text-muted: #78716c;
    --text-secondary: #57534e;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Source Sans 3', -apple-system, sans-serif;
    background: var(--cream);
    color: var(--warm-black);
    line-height: 1.6;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
  }

  /* Subtle paper texture */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.025;
    pointer-events: none;
    z-index: 1000;
  }

  /* Common page header styles */
  .page-header {
    background: var(--white);
    border-bottom: 1px solid var(--border);
  }

  .page-header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    text-align: center;
  }

  .page-title {
    font-family: 'Lora', Georgia, serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 500;
    color: var(--warm-black);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-subtitle {
    font-size: 1.05rem;
    color: var(--text-muted);
  }

  .section-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--rust);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  /* Breadcrumb styles */
  .breadcrumb {
    background: var(--white);
    border-bottom: 1px solid var(--border);
  }

  .breadcrumb-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .breadcrumb a {
    font-size: 0.85rem;
    color: var(--navy);
    text-decoration: none;
    font-weight: 500;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb-sep {
    color: var(--text-muted);
    margin: 0 0.5rem;
  }

  .breadcrumb-current {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  @media (max-width: 900px) {
    .page-header-inner {
      padding: 3rem 1.5rem;
    }

    .breadcrumb-inner {
      padding: 0.875rem 1.5rem;
    }
  }
</style>
